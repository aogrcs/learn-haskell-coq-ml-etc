category:            Network
build-type:          Simple
cabal-version:       >=1.10

test-suite test
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  other-modules: PreludeSpec
               , RLPSpec
               , Testing
               , TriePathSpec
               , TrieSpec
  build-depends: base
               , ben-kirwin-merkle
               , aeson
               , attoparsec
               , bytestring
               , containers
               , hspec
               , mtl
               , QuickCheck
               , text
               , unordered-containers
  default-language:    Haskell2010

library
  exposed-modules: PPrelude
                 , RLP
                 , RLPConvert
                 , RLPItem
                 , Trie
                 , TrieInternal
                 , TrieMapDB
                 , TriePath
  build-depends:   base
                 , attoparsec
                 , bytestring
                 , containers
                 , cryptohash
                 , errors
                 , free
                 , mtl
  hs-source-dirs: src
  default-language:    Haskell2010
